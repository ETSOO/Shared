{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "isolatedModules": true,
        "outDir": "./lib/cjs",
        "noEmit": false,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["dom", "dom.iterable", "ESNext"]
    },
    "include": ["src"]
}
