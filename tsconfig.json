{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "outDir": "./lib",
    "noEmit": false,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
